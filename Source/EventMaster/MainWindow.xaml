<Window x:Class="EventMaster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EventMaster"
        mc:Ignorable="d"
        Title="MainWindow" Height="522.5" Width="910.5">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <DockPanel Name="MainDockPanel">
        <!-- https://www.norberteder.com/windows-presentation-foundation-45-das-ribbon-steuerelement/ -->
        <Ribbon x:Name="RibbonWin" DockPanel.Dock="Top" SelectedIndex="0">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu>
                    <RibbonApplicationMenuItem Header="Info"/>
                    <RibbonApplicationMenuItem Header="Beenden"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Header="Verwaltung">
                <RibbonGroup Header="Stammdaten">
                    <RibbonButton Name="OpenEmployeeRibbonButton" Label="Mitarbeiter" LargeImageSource="{StaticResource MyImageSource}" Click="OpenEmployeeRibbonButton_Click" />
                </RibbonGroup>
            </RibbonTab>
        </Ribbon>
        <Frame Name="ContentFrame" NavigationUIVisibility="Hidden" Navigating="ContentFrame_Navigating"></Frame>
    </DockPanel>
</Window>
